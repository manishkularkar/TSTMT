<section class="h-100 h-custom" style="background-color: #99A3A4; ">
    <div class="card-body p-4 p-md-5">
        <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Vendor Registration</h3>
        <form class="px-md-2">
            <input type="hidden" id="hdnId" />

            <div class="form-outline mb-4">
                <b><label class="form-label" for="form3Example1q">Vendor Name</label></b>
                <input type="text" placeholder="Enter Vendor Name" id="txtVendor" class="form-control" />
            </div>

            <button type="submit" class="btn btn-success btn-lg mb-1" onclick="SaveVendor()">Submit</button>
        </form>
    </div>
</section>

<section>
    <div>
        <div class="card p-3">
            <h3 class="card-title"> Show Vendor List</h3>

            <div class="table-responsive">
                <table id="Vendor_mast" border="0" class="table table-bordered table-hover table-striped">
                    <thead class="text-white bg-dark">
                        <tr>
                            <th>Vendor Id</th>
                            <th>Vendor Name</th>
                            <th>Edit</th>
                            <th>Delete</th>
                            <th>Detail</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
</section>









@*popup*@

<div id="Vendor_mast" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-body">
                <div class="container" id="Detail">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">CLOSE</button>
                </div>
            </div>
        </div>
    </div>
</div>

